<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cardapio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idImageViewItemBatata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idTxtNomeProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/idTxtPreco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="2dp"
            android:layout_gravity="center_vertical"
            android:text="TextView" />

        <Button
            android:id="@+id/idButtonRemoverQtdeItem"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:padding="1dp"
            android:layout_marginEnd="2dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/amarelo_botao_adicionar_qtde_item">
        </Button>

        <Button
            android:id="@+id/idButtonAdicionarQtdeItem"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:padding="1dp"
            android:layout_marginEnd="2dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/amarelo_botao_adicionar_qtde_item">
        </Button>

    </LinearLayout>

</FrameLayout>