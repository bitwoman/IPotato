<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classes.MainActivity"
    tools:openDrawer="left"
    android:id="@+id/drawerLayout">

    <include
        layout="@layout/toolbar"/>

    <!-- Container base para 'hospedar' os fragmentos de cada pÃ¡gina -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/idFragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_principal"
        android:fitsSystemWindows="true"/>

    <!--  NavigationView para gerar o menu -->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:id="@+id/navi_view"
        android:background="@color/amarelo_barra_notificacoes_primario"
        app:menu="@menu/nav_drawer_menu"
        app:headerLayout="@layout/nav_drawer_header"
        android:layout_gravity="start"
        />

</androidx.drawerlayout.widget.DrawerLayout>